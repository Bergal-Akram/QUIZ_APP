<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="24dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Username -->
    <EditText
        android:id="@+id/name_log"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:backgroundTint="@color/inputBorder"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Password -->
    <EditText
        android:id="@+id/Pass_log"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:backgroundTint="@color/inputBorder"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textSecondary"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/name_log"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Forgot password -->
    <TextView
        android:id="@+id/frg_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/Pass_log"
        app:layout_constraintEnd_toEndOf="@id/Pass_log"
        android:layout_marginTop="8dp" />

    <!-- Login Button -->

    <!-- Sign up -->
    <Button
        android:id="@+id/btn_log"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/buttonColor"
        android:fontFamily="sans-serif-medium"
        android:text="Login"
        android:textColor="@color/buttonText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_log" />

    <TextView
        android:id="@+id/signup_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Donâ€™t have an account? Sign up"
        android:textColor="@color/textPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_log"
        app:layout_constraintVertical_bias="0.187" />

</androidx.constraintlayout.widget.ConstraintLayout>
